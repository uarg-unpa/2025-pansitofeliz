package actividad_10_09;

public class Vehiculo{
    private int litros;
    private String marca;
    private int modelo;
    private Motor motor; // Composicion

public Vehiculo (String marca, int modelo, int litros){
    this.marca = marca;
    this.modelo = modelo;
    this.litros = litros;
    this.motor = new Motor(); // Inicializa el objeto complejo
}

public void setLitros (int litros){
    this.litros = litros;
}

public void setMarca (String marca){
    this.marca = marca;
}

public void setModelo (int modelo){
    this.modelo = modelo;
}

public String getMarca (){
    return this.marca;
}

public int getLitros (){
    return this.litros;
}

public int getModelo (){
    return this.modelo;
}

public Motor getMotor (){
    return this.motor;
}

public boolean esPotente(){
    if (motor.getCilindrado() > 1000)
        return true;
    else
        return false;
}

public double verConsumo(){
    return (double) this.litros / motor.getCilindrado();
}

public String toString(){
    return "Marca: " + this.marca + ", Modelo: " + this.modelo + ", Motor: " + motor.getCilindrado() + "cc, Tipo: " + motor.getTipo() + ", Cantidad de litros: " + this.litros;
}}