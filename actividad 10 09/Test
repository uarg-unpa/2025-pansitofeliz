package actividad_10_09;
import java.util.Scanner;

public class Test{
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        Motor motor1 = new Motor(1500, "Diesel");
        Vehiculo vehiculo1 = new Vehiculo("Toyota", 2020, 50, motor1);

        String marca;
        int modelo, litros;
        String tipo;
        
        System.out.println("Ingresar la marca del vehiculo: ");
        marca = scanner.nextLine();
        scanner.nextLine(); // Limpia el buffer

        System.out.println("Ingresar el modelo del vehiculo: ");
        modelo = scanner.nextInt();
        scanner.nextLine(); // Limpia el buffer

        System.out.println("Ingresar la cantidad de litros del vehiculo: ");
        litros = scanner.nextInt();
        scanner.nextLine();

        System.out.println("Ingresar el cilindrado del motor: ");
        cilindrado = scanner.nextInt();
        scanner.nextLine();

        System.out.println("Ingresar el tipo de motor: ");
        tipo = scanner.nextLine();
        scanner.nextLine(); // Limpia el buffer

        System.out.println(vehiculo1.toString());

        System.out.printf("Consumo del vehiculo:", vehiculo1.verConsumo());
        
        scanner.close();
    }
}